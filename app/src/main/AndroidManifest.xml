<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="hu.engard.xpenses.MyApplication"
    package="hu.engard.xpenses"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="hu.engard.xpenses.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.engard.xpenses.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.engard.xpenses.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="hu.engard.xpenses.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hu.engard.xpenses.MainActivity" />
        </activity>
        <activity
            android:name="hu.engard.xpenses.TransactionListActivity"
            android:label="@string/title_transaction_list" >
        </activity>
        <activity
            android:name="hu.engard.xpenses.TransactionDetailActivity"
            android:label="@string/title_transaction_detail"
            android:parentActivityName=".TransactionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TransactionListActivity" />
        </activity>
    </application>

</manifest>